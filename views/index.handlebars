<div class="container">
<div class="row">
    <div class="col-md-4">
        <ul>
                {{#each burgers}} {{#unless this.devoured}}
                <li>
                    {{this.burger_name}}
                    <form action="/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="true">
                        <button class="button btn-danger" type="submit">Devour It!</button>
                        <br>
                        <br>
                    </form>
                </li>
                {{/unless}} {{/each}}
            </ul>

    </div>
    <div class="col-md-4">
    <form class="create-update-form" action="/" method="POST">

                <div class="form-group text-center">
                    <label for="ca"><h3>Add new Burger:</h3></label>
                    <input type="text" id="ca" name="name">
                                    
                    
                

                <button class="button btn-success" type="submit">Add Burger</button>
                </div>

            </form>


    </div>
    <div class="col-md-4">
    <h6>Devoured Burgers:</h6>
            <hr>
            <ul>
                {{#each burgers}} {{#if this.devoured}}

                <li>
                    {{this.burger_name}}
                    <form action="/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="false">
                    </form>

                </li>
                {{/if}} {{/each}}
            </ul>


    </div>
</div>

    
</div>